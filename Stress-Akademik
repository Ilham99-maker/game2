    ];

    // Status permainan: 'start', 'quiz', 'result'
    const [currentScreen, setCurrentScreen] = useState('start');
    // Indeks pertanyaan yang sedang ditampilkan
    const [currentQuestionIndex, setCurrentQuestionIndex] = useState(0);
    // Total skor stres yang terkumpul
    const [totalStressScore, setTotalStressScore] = useState(0);
    // Array untuk menyimpan jawaban yang dipilih (untuk validasi)
    const [selectedAnswers, setSelectedAnswers] = useState(Array(questions.length).fill(null));

    // Fungsi untuk memulai game
    const startGame = () => {
        setCurrentScreen('quiz');
        setCurrentQuestionIndex(0);
        setTotalStressScore(0);
        setSelectedAnswers(Array(questions.length).fill(null)); // Reset jawaban
    };

    // Fungsi untuk menangani pilihan jawaban
    const handleAnswer = (stressValue, questionIndex) => {
        // Buat salinan array jawaban
        const newSelectedAnswers = [...selectedAnswers];
        // Simpan stressValue untuk pertanyaan ini
        newSelectedAnswers[questionIndex] = stressValue;
        setSelectedAnswers(newSelectedAnswers);
    };

    // Fungsi untuk melanjutkan ke pertanyaan berikutnya atau menampilkan hasil
    const nextQuestion = () => {
        // Validasi apakah jawaban sudah dipilih untuk pertanyaan saat ini
        if (selectedAnswers[currentQuestionIndex] === null) {
            // Ini akan muncul sebagai pesan di UI atau bisa juga dengan alert sederhana jika di web biasa
            alert("Pilih jawaban dulu ya!");
            return;
        }

        // Jika ini bukan pertanyaan terakhir, lanjutkan ke pertanyaan berikutnya
        if (currentQuestionIndex < questions.length - 1) {
            setCurrentQuestionIndex(prevIndex => prevIndex + 1);
        } else {
            // Jika ini pertanyaan terakhir, hitung total skor dan tampilkan hasil
            const finalScore = selectedAnswers.reduce((sum, score) => sum + score, 0);
            setTotalStressScore(finalScore);
            setCurrentScreen('result');
        }
    };

    // Fungsi untuk memulai ulang game
    const restartGame = () => {
        setCurrentScreen('start');
        setCurrentQuestionIndex(0);
        setTotalStressScore(0);
        setSelectedAnswers(Array(questions.length).fill(null));
    };

    // Fungsi untuk mendapatkan deskripsi tingkat stres berdasarkan skor
    const getStressLevel = (score) => {
        if (score >= 0 && score <= 15) {
            return {
                title: "Zen Master Kurikulum! ðŸ§˜â€â™‚ï¸âœ¨",
                description: "Wuih! Kamu/Anda tenang banget kayak air di danau pas perubahan kurikulum. Perubahan itu kayak sarapan pagi buat kamu/Anda, dihadapi dengan senyum. Tetap kalem ya, Master!"
            };
        } else if (score >= 16 && score <= 30) {
            return {
                title: "Kapten Kurikulum Santai! â›µï¸",
                description: "Kamu/Anda lumayan santai ngadepin ombak kurikulum. Ada sih riak-riak kecil, tapi kamu/Anda masih bisa berlayar dengan tenang. Jaga terus keseimbanganmu/Anda!"
            };
        } else if (score >= 31 && score <= 45) {
            return {
                title: "Pejuang Kurikulum Optimis! ðŸ’ª",
                description: "Kamu/Anda ngerasain tantangan, tapi semangat optimis kamu/Anda nggak goyah. Kamu/Anda tahu cara bangkit dan terus maju, meskipun ada rintangan kurikulum. Gas terus!"
            };
        } else if (score >= 46 && score <= 60) {
            return {
                title: "Penjelajah Kurikulum Bergelombang! ðŸŒŠ",
                description: "Ombak kurikulum mulai berasa gede nih. Kamu/Anda mungkin mulai ngerasa tekanan dan sedikit capek. Inget ya, sesekali istirahat, cari 'pelabuhan' buat ngadem."
            };
        } else { // score >= 61
            return {
                title: "Alarm Kurikulum Krisis! ðŸš¨",
                description: "Kamu/Anda udah di batas stres kurikulum! Rasanya pengen teriak atau kabur ke pulau antah berantah. Ini waktunya cari bantuan, atau minimal, liburan panjang tanpa internet!"
            };
        }
    };

    // Render layar utama
    const renderStartScreen = () => (
        <div className="text-center p-6 md:p-8 bg-gradient-to-br from-blue-500 to-blue-700 rounded-3xl text-white shadow-xl">
            <div className="mb-4 text-6xl">
                ðŸ§ ðŸ’¡
            </div>
            <h1 className="text-4xl md:text-5xl font-extrabold mb-3 leading-tight">KURIKULUM SIAGA</h1>
            <p className="font-bold mb-4 text-xl">Stres Anda Gimana, Bestie? ðŸš€</p>
            <p className="text-blue-200 text-base mb-6">
                SIAGA: Survei Interaktif Analisis Gangguan Akademis
            </p>
            <p className="text-blue-100 mb-8 text-lg md:text-xl leading-relaxed">
                Selamat datang di petualangan seru ini! Game ini pas banget buat mahasiswa dan guru muda yang lagi semangat-semangatnya, sampai Bapak/Ibu guru senior yang udah puluhan tahun ngajar dan mungkin udah mikir mau pensiun. Yuk, cari tahu seberapa 'bestie' kamu/Anda sama perubahan kurikulum dan gimana cara kamu/Anda ngadepinnya. Siap?
            </p>
            <button
                onClick={startGame}
                className="mt-6 w-full md:w-2/3 bg-white text-blue-700 py-4 px-8 btn hover:bg-blue-100 font-bold text-xl shadow-lg transform hover:scale-105 transition-all duration-300"
            >
                Mulai Petualangan!
            </button>
        </div>
    );

    // Render layar kuis (pertanyaan)
    const renderQuizScreen = () => {
        const currentQ = questions[currentQuestionIndex];
        return (
            <div className="text-left">
                <p className="text-sm text-gray-500 mb-4 text-center">
                    Pertanyaan {currentQuestionIndex + 1} dari {questions.length}
                </p>
                <div className="mb-6 p-4 bg-blue-50 card">
                    <p className="text-xl font-semibold text-gray-700 mb-4">{currentQ.question}</p>
                    <div className="space-y-3">
                        {currentQ.choices.map((choice, idx) => (
                            <label key={idx} className="radio-label">
                                <input
                                    type="radio"
                                    name={`question-${currentQuestionIndex}`}
                                    value={choice.stressValue}
                                    checked={selectedAnswers[currentQuestionIndex] === choice.stressValue}
                                    onChange={() => handleAnswer(choice.stressValue, currentQuestionIndex)}
                                    required
                                />
                                <span>{choice.text}</span>
                            </label>
                        ))}
                    </div>
                </div>
                <button
                    onClick={nextQuestion}
                    className="mt-8 w-full bg-blue-600 text-white py-3 px-6 btn hover:bg-blue-700 font-semibold text-lg"
                >
                    {currentQuestionIndex === questions.length - 1 ? 'Lihat Hasil Stresku!' : 'Lanjut ke Pertanyaan Berikutnya'}
                </button>
            </div>
        );
    };

    // Render layar hasil
    const renderResultScreen = () => {
        const { title, description } = getStressLevel(totalStressScore);
        return (
            <div className="mt-10 p-6 md:p-8 bg-green-50 card">
                <h2 className="text-2xl md:text-3xl font-bold text-green-800 mb-4">Hasil Tingkat Stres Kurikulum Kamu/Anda:</h2>
                <div className="text-green-700 text-lg md:text-xl leading-relaxed">
                    <h3 className="text-xl md:text-2xl font-bold mb-2">{title}</h3>
                    <p>{description}</p>
                    <p className="mt-4 text-base text-gray-600">Total skor stres kamu/Anda: <span className="font-bold text-blue-800">{totalStressScore}</span></p>
                </div>
                <button
                    onClick={restartGame}
                    className="mt-6 w-full bg-gray-500 text-white py-3 px-6 btn hover:bg-gray-600 font-semibold text-md"
                >
                    Ulangi Petualangan
                </button>
            </div>
        );
    };

    return (
        <div className="flex items-center justify-center min-h-screen p-4 bg-blue-100">
            <div className="bg-white card max-w-2xl w-full p-8 md:p-12">
                {currentScreen === 'start' && renderStartScreen()}
                {currentScreen === 'quiz' && renderQuizScreen()}
                {currentScreen === 'result' && renderResultScreen()}
            </div>
        </div>
    );
};

export default App;
